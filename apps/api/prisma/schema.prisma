generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(uuid())
  name      String?
  createdAt DateTime @default(now())

  settings  Settings?
  plans     Plan[]
  dailyLogs DailyLog[]
}

model Settings {
  id                    String   @id @default(uuid())
  userId                String   @unique
  startDate             String   // YYYY-MM-DD
  timezone              String   @default("America/Sao_Paulo")
  reminderTime          String   @default("09:00") // HH:mm
  weeklyGoalApplications Int     @default(10)
  weeklyGoalMessages    Int      @default(20)
  streakRuleMinTasks    Int      @default(1)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Plan {
  id        String   @id @default(uuid())
  userId    String
  name      String
  isActive  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  days PlanDay[]
}

model PlanDay {
  id        String   @id @default(uuid())
  planId    String
  dayIndex  Int      // 1-based
  title     String
  theme     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  plan  Plan   @relation(fields: [planId], references: [id], onDelete: Cascade)
  tasks Task[]

  @@unique([planId, dayIndex])
}

model Task {
  id               String   @id @default(uuid())
  planDayId        String
  title            String
  description      String?
  category         String   // Frontend, Backend, SQL/DB, etc.
  estimatedMinutes Int
  required         Boolean  @default(false)
  tags             String   @default("[]") // JSON array stored as string
  order            Int      @default(0)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  planDay PlanDay @relation(fields: [planDayId], references: [id], onDelete: Cascade)
}

model DailyLog {
  id                   String    @id @default(uuid())
  userId               String
  date                 String    // YYYY-MM-DD
  completedTaskIds     String    @default("[]") // JSON array stored as string
  hoursSpent           Float     @default(0)
  pipelineApplications Int       @default(0)
  pipelineMessages     Int       @default(0)
  reflectionText       String    @default("")
  finalizedAt          DateTime?
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
}
